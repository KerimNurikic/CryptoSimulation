@model IEnumerable<CryptoSimulation.Models.Portfolio>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model=> model.PortfolioID)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PortfolioID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PortfolioID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PortfolioID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PortfolioID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
